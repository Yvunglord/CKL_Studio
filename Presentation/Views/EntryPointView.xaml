                                      Fill="White" 
                                      Stretch="Uniform" 
                                      Width="16"
                                      Height="16"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Center"
                                      Grid.Column="2"
                                      Grid.RowSpan="2"
                                      Margin="2, 2, 5, 2"
                                      Visibility="{Binding IsPinned, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </Grid>
    </Grid>

</UserControl>
